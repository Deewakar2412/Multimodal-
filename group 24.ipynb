# Importing necessary modules
import google.generativeai as genai
from PIL import Image
import os

# Configure API Key
genai.configure(api_key="AIzaSyAz6PuBvVh0biLmfIKi0mdTlvfn0lBIezw")

# Initialize the Gemini 2.0 Flash model
model = genai.GenerativeModel(model_name="models/gemini-2.0-flash")

# Ask user what type of input they want to give
input_type = input("üßæ What type of input do you want to provide? (text / image / both): ").strip().lower()

text_prompt = ""
image_part = None

# Handle text input
if input_type in ["text", "both"]:
    text_prompt = input("‚úçÔ∏è Enter your text prompt: ").strip()

# Handle image input
if input_type in ["image", "both"]:
    image_path = input("üñºÔ∏è Enter the image file path (example: /content/image.png): ").strip()
    if os.path.exists(image_path):
        try:
            image_part = Image.open(image_path)
            print("‚úÖ Image loaded successfully!")
        except Exception as e:
            print("‚ùå Failed to load image:", e)
    else:
        print("‚ùå File not found.")

# Send to Gemini API and get response
try:
    if text_prompt and image_part:
        response = model.generate_content([text_prompt, image_part])
    elif text_prompt:
        response = model.generate_content(text_prompt)
    elif image_part:
        response = model.generate_content([image_part])
    else:
        raise ValueError("‚ùå No valid input provided.")

    print("\nü§ñ Gemini's Response:\n")
    print(response.text)

except Exception as e:
    print("\n‚ùå Gemini API Error:", e)
